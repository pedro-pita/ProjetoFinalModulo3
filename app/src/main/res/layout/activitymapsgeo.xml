<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".geofences.MapsActivityGeo" />

    <ImageButton
        android:id="@+id/ib_client"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:contentDescription="client"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_search"
        app:layout_constraintEnd_toEndOf="@+id/ib_reset"
        app:layout_constraintTop_toBottomOf="@+id/ib_reset"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/ib_reset"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ib_client"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="68dp"
        android:contentDescription="reset"
        android:padding="6dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_action_refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/voltarBtn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ib_client"
        android:layout_marginTop="8dp"
        android:contentDescription="reset"
        android:padding="6dp"
        android:scaleType="fitStart"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="@+id/ib_client"
        app:layout_constraintTop_toBottomOf="@+id/ib_client" />

</android.support.constraint.ConstraintLayout>